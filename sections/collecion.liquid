<div class="ContenedorCollecion">
  {% for block in section.blocks %}
    <div>
    <a href="{{ block.settings.link-collection }}">
      <img src="{{ block.settings.Coleccion | img_url: '1000x' }}" alt="">
    </a>
      <p class="TextoColeccion">{{ block.settings.TituloC }}</p>
    </div>
  {% endfor %}
</div>


<style>
  .ContenedorCollecion {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 300px);
    grid-column-gap: 10px;
    grid-row-gap: 10px;
    padding: 3rem;
  }

  .ContenedorCollecion div {
    position: relative;
    align-self: stretch;
    overflow: hidden;
  }

  .TextoColeccion {
    position: absolute;
    color: rgb(255, 255, 255);
    bottom: -20%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 4;
    font-size: 2rem;
    transition: all 0.4s ease-in-out;
    text-align: center;
  }
  .ContenedorCollecion div:hover .TextoColeccion {
    bottom: 10px;
    transition: all 0.4s ease-in-out;
  }



  .ContenedorCollecion div img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 4px;
    transition: all 0.4s ease-in-out;
  }

  .ContenedorCollecion div:hover img {
    filter: brightness(50%);
    transition: all 0.4s ease-in-out;
  }


  .ContenedorCollecion div:first-child {
    grid-area: 1 / 1 / 3 / 2;
  }

  .ContenedorCollecion div:nth-child(2) {
    grid-area: 1 / 2 / 2 / 3;
  }
  .ContenedorCollecion div:nth-child(3) {
    grid-area: 1 / 3 / 2 / 4;
  }
  .ContenedorCollecion div:nth-child(4) {
    grid-area: 2 / 2 / 3 / 3;
  }
  .ContenedorCollecion div:nth-child(5) {
    grid-area: 2 / 3 / 3 / 4;
  }
  .ContenedorCollecion div:nth-child(6) {
    grid-area: 1 / 4 / 3 / 5;
  }

  @media screen and (max-width: 1020px) {

    .ContenedorCollecion {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(3, 300px);
      grid-column-gap: 10px;
      grid-row-gap: 10px;
    }

    .ContenedorCollecion div:first-child {
      grid-area: 1 / 1 / 3 / 2;
    }
    .ContenedorCollecion div:nth-child(2) {
      grid-area: 1 / 2 / 2 / 3;
    }
    .ContenedorCollecion div:nth-child(3) {
      grid-area: 1 / 3 / 2 / 4;
    }
    .ContenedorCollecion div:nth-child(4) {
      grid-area: 2 / 2 / 3 / 3;
    }
    .ContenedorCollecion div:nth-child(5) {
      grid-area: 2 / 3 / 3 / 4;
    }
    .ContenedorCollecion div:nth-child(6) {
      grid-area: 3 / 1 / 4 / 4;
    }
  }

  @media screen and (max-width: 720px) {
    .ContenedorCollecion {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(4, 250px);
      grid-column-gap: 10px;
      grid-row-gap: 10px;
      padding: 1rem !important;
    }
    .ContenedorCollecion div:first-child {
      grid-area: 1 / 1 / 2 / 3;
    }
    .ContenedorCollecion div:nth-child(2) {
      grid-area: 2 / 1 / 3 / 2;
    }
    .ContenedorCollecion div:nth-child(3) {
      grid-area: 2 / 2 / 3 / 3;
    }
    .ContenedorCollecion div:nth-child(4) {
      grid-area: 3 / 1 / 4 / 2;
    }
    .ContenedorCollecion div:nth-child(5) {
      grid-area: 3 / 2 / 4 / 3;
    }
    .ContenedorCollecion div:nth-child(6) {
      grid-area: 4 / 1 / 5 / 3;
    }

    .ContenedorCollecion div .TextoColeccion {
    bottom: 10px;
  }
  
